@model WebApplication14.Models.Requirement
@using System.Globalization;
@{
    Layout = null;
}

@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@section HeaderSection{
<script src="~/Scripts/jquery-3.1.0.js"></script>
<script src="~/Scripts/jquery-3.1.0.min.js"></script>

<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<link href="~/css/bootstrap-datetimepicker.css" rel="stylesheet" />
<link href="~/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
}
@section TitleSection{
    Edit - Requirement
}

@section ContentBody{
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Requirement</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.reqId)
    
            <div class="form-group">
                @Html.LabelFor(model => model.title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.discription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <textarea class="form-control text-box single-line" data-val="true" data-val-length="השדה discription חייב להיות מחרוזת עם אורך מרבי של 3000." data-val-length-max="3000" data-val-required="השדה discription נדרש." id="discription" name="discription" rows="7">@Model.discription</textarea>
                    @Html.ValidationMessageFor(model => model.discription, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.Total_Complition_Score, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Total_Complition_Score, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Total_Complition_Score, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.endDatetime, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input size="16" type="text" class="form_datetime form-control text-box single-line" data-val="true" data-val-date="The field endDatetime must be a date." data-val-required="השדה endDatetime נדרש." id="endDatetime" name="endDatetime" value="@Model.endDatetime.ToString("MM-dd-yyyy HH:mm", CultureInfo.CreateSpecificCulture("en-US"))">
                    @Html.ValidationMessageFor(model => model.endDatetime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.thresholdScore, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.thresholdScore, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.thresholdScore, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
<script type="text/javascript">
    $(".form_datetime").datetimepicker({ format: 'mm-dd-yyyy hh:ii' });
</script>
}