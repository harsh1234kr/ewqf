@model WebApplication14.Models.Member
@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@section TitleSection{
   ContactUs - Revise
}
@section HeaderSection{

}
@section ContentBody{
    <br /><br />

<div class="table-responsive">
    <div class="row">
        <div class="col-md-6">
            <div class="well well-sm">
               @using (Html.BeginForm())
               {
                    <fieldset>
                        <legend class="text-center header">Contact us</legend>
                    
                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-1">
                                <input id="fname" name="fname" type="text" value="@Model.firstName" placeholder="First Name" class="form-control" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-1">
                                <input id="lname" name="lname" type="text" value="@Model.lastName" placeholder="Last Name" class="form-control" readonly>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-1">
                                <input id="email" name="email" type="text" value="@Model.email" placeholder="Email Address" class="form-control" readonly>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-1">
                                <input id="phone" name="phone" type="text" value="@Model.phone" placeholder="Phone" class="form-control" readonly>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-1">
                                <textarea class="form-control" id="message" name="message" placeholder="Enter your massage for us here. We will get back to you within 2 business days." rows="7"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <br />
                                <button type="submit" class="btn btn-primary btn-lg">send</button>
                            </div>
                        </div>
                    </fieldset>
               }
            </div>
        </div>
 
    </div>
</div>




<style>

    .header {
        background-color: #F5F5F5;
        font-weight: bold;
        color: #000000;
        height: 70px;
        font-size: 27px;
        padding: 10px;
    }
</style>
}
