@model WebApplication14.Models.project
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <!-- Website CSS style -->
    <link href="~/css/main.css" rel="stylesheet" />
    <!-- Website Font style -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>

    <title>Revise - Create new project</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="row main">
                <div class="panel-heading">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    
                    @*<div class="panel-title text-center">
                        <img src="~/images/logo.gif" height="90" />
                        <br />
                        <h1 class="title">Sign-up</h1>
                        <hr />
                    </div>*@
                </div>
                <div class="main-login main-center">
                    @Html.ValidationMessage("CredentialError", new { style = "color:red;" })
                    <div class="form-group">
                        <label for="name" class="cols-sm-2 control-label">Project Name:</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.projectName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.projectName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="name" class="cols-sm-2 control-label">Discription:</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-bars" aria-hidden="true"></i></span>
                                <textarea class="form-control text-box single-line" data-val="true" data-val-length="השדה discription חייב להיות מחרוזת עם אורך מרבי של 3000." data-val-length-max="3000" data-val-required="השדה discription נדרש." id="discription" name="discription" value="" rows="7"></textarea>

                            @Html.ValidationMessageFor(model => model.discription, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="name" class="cols-sm-2 control-label">Assign Users to the project:</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-users" aria-hidden="true"></i></span>
                               @Html.ListBox("MembersId", (MultiSelectList)ViewBag.memberlist)
                            </div>
                        </div>
                    </div>

               

        

          

                    <div class="form-group ">
                        <button type="submit" value="Create" class="btn btn-primary btn-lg btn-block login-button">Create</button>
                    </div>
                    <div class="login-register">
                        @Html.ActionLink("Back to Projects list", "Index")
                    </div>

                </div>
            </div>
        </div>
        <script src="~/js/bootstrap.js"></script>
    }
</body>
</html>
